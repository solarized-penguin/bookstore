BOOKS_API_PORT=8080
BOOKS_API_DEBUG=true
BOOKS_API_OPENAPI_URL=/openapi.json
BOOKS_API_DOCS_URL=/
BOOKS_API_REDOC_URL=/redoc
BOOKS_API_SWAGGER_UI_OAUTH2_REDIRECT_URL=/docs/oauth2-redirect
BOOKS_API_INCLUDE_IN_SCHEMA=true

BOOKS_DB_NAME=bookstore_db
BOOKS_DB_USER=postgres
BOOKS_DB_PASSWORD=postgres
