BOOKS_SECURITY_JWT_TOKEN_EXPIRE_MINUTES=60

BOOKS_LOGGING_LOKI_ENDPOINT=http://0.0.0.0:3100/loki/api/v1/push
BOOKS_LOGGING_LOKI_HANDLER_VERSION=1
BOOKS_LOGGING_LOG_LEVEL=DEBUG
